---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import SEO from '../components/shared/SEO.astro';
import PostHog from '../components/posthog.astro';
import { sanityFetch, urlFor } from '../lib/sanity/client';
import { siteSettingsQuery } from '../lib/sanity/queries';
import '../styles/global.css';

interface SiteSettings {
  siteTitle?: string;
  tagline?: string;
  siteUrl?: string;
  metaTitle?: string;
  metaDescription?: string;
  defaultMetaDescription?: string;
  keywords?: string[];
  ogImage?: any;
  twitterHandle?: string;
  linkedinUrl?: string;
  githubUrl?: string;
  youtubeUrl?: string;
}

interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: boolean;
  pathname?: string;
  publishedTime?: string;
}

// Fetch global site settings from Sanity
const siteSettings = await sanityFetch<SiteSettings | null>(siteSettingsQuery).catch(() => null);

// Fallback defaults if Sanity settings aren't configured
const defaultDescription = siteSettings?.metaDescription || siteSettings?.defaultMetaDescription || 'Staff Software Engineer and Conference Speaker specializing in React, Next.js, and payment systems. Based in Zurich.';
const defaultImage = siteSettings?.ogImage
  ? urlFor(siteSettings.ogImage).width(1200).height(630).url()
  : '/og-default.jpg';
const siteName = siteSettings?.siteTitle || 'Faris Aziz';
const siteUrl = siteSettings?.siteUrl?.trim() || 'https://faziz-dev.com';
const twitterHandle = siteSettings?.twitterHandle || 'farisaziz12';
const personName = siteSettings?.siteTitle || 'Faris Aziz';
const jobTitle = siteSettings?.tagline || 'Staff Software Engineer';

const {
  title,
  description = defaultDescription,
  image = defaultImage,
  article = false,
  pathname = '',
  publishedTime,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Favicons -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Fonts: Space Grotesk (display) + Inter (body) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap"
      rel="stylesheet"
    />

    <SEO
      title={title}
      description={description}
      image={image}
      article={article}
      pathname={pathname}
      publishedTime={publishedTime}
      siteName={siteName}
      siteUrl={siteUrl}
      twitterHandle={twitterHandle}
      personName={personName}
      jobTitle={jobTitle}
      socialLinks={{
        linkedin: siteSettings?.linkedinUrl,
        github: siteSettings?.githubUrl,
        youtube: siteSettings?.youtubeUrl,
        twitterUrl: siteSettings?.twitterHandle ? `https://twitter.com/${siteSettings.twitterHandle}` : undefined,
      }}
    />

    <ViewTransitions />

    <!-- Analytics -->
    <PostHog />

    <!-- Theme: Dark mode first, respect system preference -->
    <script is:inline>
      (function() {
        const stored = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = stored || (prefersDark ? 'dark' : 'light');
        document.documentElement.classList.toggle('dark', theme === 'dark');
      })();
    </script>
  </head>

  <body class="min-h-screen flex flex-col">
    <!-- Skip to content link -->
    <a
      href="#main"
      class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-accent focus:text-white focus:rounded-md focus:text-body-sm focus:font-medium"
    >
      Skip to content
    </a>

    <Header />

    <main id="main" class="flex-1">
      <slot />
    </main>

    <Footer />
  </body>
</html>
