---
import BaseLayout from '../layouts/BaseLayout.astro';
import { sanityFetch, urlFor } from '../lib/sanity/client';
import { companiesQuery, pageQuery } from '../lib/sanity/queries';

interface Company {
  _id: string;
  name: string;
  logo?: any;
  industry?: string;
  description?: string;
  role?: string;
  period?: string;
  url?: string;
  highlight?: string;
}

interface Badge {
  icon: string;
  label: string;
}

interface Activity {
  _key: string;
  title: string;
  description: string;
  icon: string;
  tags?: string[];
  featured?: boolean;
}

interface Milestone {
  _key: string;
  title: string;
  description: string;
  emoji: string;
  fullWidth?: boolean;
}

interface SkillCategory {
  _key: string;
  category: string;
  icon: string;
  items: string[];
}

interface PageContent {
  title?: string;
  subtitle?: string;
  content?: any;
  heroImage?: any;
  seo?: {
    metaTitle?: string;
    metaDescription?: string;
  };
  aboutHero?: {
    greeting?: string;
    name?: string;
    role?: string;
    location?: string;
    bio?: string;
    specialties?: string[];
    badges?: Badge[];
    linkedinUrl?: string;
  };
  aboutWhatIDo?: {
    title?: string;
    subtitle?: string;
    activities?: Activity[];
  };
  aboutJourney?: {
    title?: string;
    subtitle?: string;
    milestones?: Milestone[];
  };
  aboutSkills?: {
    title?: string;
    subtitle?: string;
    categories?: SkillCategory[];
  };
  aboutCta?: {
    statusText?: string;
    title?: string;
    description?: string;
    primaryCtaText?: string;
    primaryCtaUrl?: string;
    secondaryCtaText?: string;
    secondaryCtaUrl?: string;
  };
}

const [companies, pageContent] = await Promise.all([
  sanityFetch<Company[]>(companiesQuery).catch(() => []),
  sanityFetch<PageContent | null>(pageQuery, { identifier: 'about' }).catch(() => null),
]);

// Destructure with fallbacks
const hero = pageContent?.aboutHero;
const heroImage = pageContent?.heroImage;
const whatIDo = pageContent?.aboutWhatIDo;
const journey = pageContent?.aboutJourney;
const skillsSection = pageContent?.aboutSkills;
const cta = pageContent?.aboutCta;
const seo = pageContent?.seo;

// Fallback skills if not in CMS
const skills = skillsSection?.categories || [
  { _key: '1', category: 'Frontend', items: ['React', 'Next.js', 'TypeScript', 'Tailwind'], icon: '‚öõÔ∏è' },
  { _key: '2', category: 'Backend', items: ['Node.js', 'GraphQL', 'REST APIs', 'PostgreSQL'], icon: 'üîß' },
  { _key: '3', category: 'Payments', items: ['Stripe', 'Adyen', 'Payment Orchestration'], icon: 'üí≥' },
  { _key: '4', category: 'Testing', items: ['Playwright', 'Vitest', 'Jest', 'Cypress'], icon: 'üß™' },
  { _key: '5', category: 'Tools', items: ['Git', 'Docker', 'CI/CD', 'Vercel'], icon: 'üõ†Ô∏è' },
  { _key: '6', category: 'Design', items: ['Figma', 'Storybook', 'Design Systems'], icon: 'üé®' },
];

// Icon mapping for activities
const iconMap: Record<string, string> = {
  code: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />',
  microphone: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />',
  users: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />',
  book: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />',
  desktop: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />',
};
---

<BaseLayout
  title={seo?.metaTitle || "About | Faris Aziz"}
  description={seo?.metaDescription || "Learn about Faris Aziz - Staff Software Engineer, Conference Speaker, and ZurichJS Founder based in Zurich, Switzerland."}
  pathname="/about"
>
  <!-- Hero Section -->
  <section class="relative min-h-[80vh] flex items-center overflow-hidden">
    <div class="absolute inset-0 grid-pattern opacity-50"></div>
    <div class="absolute inset-0 gradient-mesh"></div>

    <div class="container relative z-10 py-20 md:py-32">
      <div class={`grid ${heroImage ? 'lg:grid-cols-2' : ''} gap-12 items-center`}>

      <!-- Hero Image - Mobile (shown first on mobile when image exists) -->
      {heroImage && (
        <div class="lg:hidden flex justify-center mb-8">
          <div class="relative max-w-xs">
            <div class="absolute -inset-4 bg-gradient-to-r from-accent/30 via-violet-500/30 to-pink-500/30 rounded-3xl blur-2xl opacity-60"></div>
            <div class="relative rounded-2xl overflow-hidden border border-edge shadow-2xl">
              <img
                src={urlFor(heroImage).width(400).height(500).url()}
                alt={hero?.name || "Faris Aziz"}
                class="w-full h-auto object-cover"
              />
            </div>
          </div>
        </div>
      )}

      <div class={heroImage ? 'max-w-2xl' : 'max-w-5xl'}>
        <!-- Terminal intro - only show if no hero image -->
        {!heroImage && (
          <div class="terminal max-w-md mb-8 animate-fade-in">
            <div class="terminal__header">
              <div class="terminal__dots">
                <div class="terminal__dot terminal__dot--red"></div>
                <div class="terminal__dot terminal__dot--yellow"></div>
                <div class="terminal__dot terminal__dot--green"></div>
              </div>
              <span class="terminal__title">about.sh</span>
            </div>
            <div class="terminal__body">
              <span class="terminal__prompt">$</span>
              <span class="terminal__command"> cat ~/bio.md</span>
              <div class="terminal__output">Loading profile...</div>
            </div>
          </div>
        )}

        <!-- Big Bold Title -->
        <h1 class="hero-title mb-8">
          <span class="block text-ink">{hero?.greeting || "Hey, I'm"}</span>
          <span class="block hero-title--gradient">{hero?.name || "Faris"}</span>
        </h1>

        <p class="text-lead max-w-2xl mb-8">
          {hero?.role || "Staff Software Engineer"} based in <span class="text-accent font-medium">{hero?.location || "Geneva, Switzerland"}</span>.
          {hero?.bio || "I specialize in frontend development, with deep expertise in React, Next.js, and payment systems."}
        </p>

        <!-- Topic Pills -->
        {(hero?.badges && hero.badges.length > 0) ? (
          <div class="flex flex-wrap gap-3 mb-12">
            {hero.badges.map((badge) => (
              <div class="topic-badge">
                <span class="topic-badge__icon">{badge.icon}</span>
                <span class="topic-badge__name">{badge.label}</span>
              </div>
            ))}
          </div>
        ) : (
          <div class="flex flex-wrap gap-3 mb-12">
            <div class="topic-badge">
              <span class="topic-badge__icon">‚öõÔ∏è</span>
              <span class="topic-badge__name">react</span>
            </div>
            <div class="topic-badge">
              <span class="topic-badge__icon">‚ñ≤</span>
              <span class="topic-badge__name">nextjs</span>
            </div>
            <div class="topic-badge">
              <span class="topic-badge__icon">üí≥</span>
              <span class="topic-badge__name">payments</span>
            </div>
            <div class="topic-badge">
              <span class="topic-badge__icon">üé§</span>
              <span class="topic-badge__name">speaker</span>
            </div>
          </div>
        )}

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-4">
          <a href="/invite" class="btn-primary text-lg px-8 py-4 group glow">
            Invite me to speak
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a
            href={hero?.linkedinUrl || "https://linkedin.com/in/farisaziz12"}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary text-lg px-8 py-4"
          >
            Connect on LinkedIn
          </a>
        </div>
      </div>

      <!-- Hero Image - Desktop (right column) -->
      {heroImage && (
        <div class="hidden lg:block relative order-last">
          <div class="relative">
            <div class="absolute -inset-4 bg-gradient-to-r from-accent/30 via-violet-500/30 to-pink-500/30 rounded-3xl blur-2xl opacity-60"></div>
            <div class="relative rounded-2xl overflow-hidden border border-edge shadow-2xl">
              <img
                src={urlFor(heroImage).width(600).height(700).url()}
                alt={hero?.name || "Faris Aziz"}
                class="w-full h-auto object-cover"
              />
            </div>
          </div>
        </div>
      )}
      </div>
    </div>
  </section>

  <!-- What I Do - Bento Grid -->
  <section class="section-dark py-20 md:py-28 relative overflow-hidden">
    <div class="absolute inset-0 dot-pattern opacity-20"></div>

    <div class="container relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-display font-bold text-white mb-4">
          {whatIDo?.title ? (
            <Fragment set:html={whatIDo.title.replace(/\*([^*]+)\*/g, '<span class="text-gradient">$1</span>')} />
          ) : (
            <>What I <span class="text-gradient">Do</span></>
          )}
        </h2>
        <p class="text-slate-400 text-lg max-w-xl mx-auto">
          {whatIDo?.subtitle || "Building software, sharing knowledge, growing communities"}
        </p>
      </div>

      {(whatIDo?.activities && whatIDo.activities.length > 0) ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 max-w-6xl mx-auto">
          {whatIDo.activities.map((activity) => (
            <div class={`${activity.featured ? 'lg:col-span-2 bg-gradient-to-br from-accent/20 to-violet-500/20' : 'bg-white/5'} backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-white/30 transition-all duration-300`}>
              <div class={`${activity.featured ? 'w-14 h-14 rounded-2xl bg-gradient-to-br from-accent to-violet-500' : 'w-12 h-12 rounded-xl bg-white/10'} flex items-center justify-center mb-6`}>
                <svg class={`${activity.featured ? 'w-7 h-7' : 'w-6 h-6'} text-white`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <Fragment set:html={iconMap[activity.icon] || iconMap.code} />
                </svg>
              </div>
              <h3 class={`font-display font-bold ${activity.featured ? 'text-2xl mb-3' : 'text-xl mb-2'} text-white`}>{activity.title}</h3>
              <p class={`${activity.featured ? 'text-slate-300 mb-4' : 'text-slate-400 text-sm'}`}>{activity.description}</p>
              {activity.featured && activity.tags && activity.tags.length > 0 && (
                <div class="flex flex-wrap gap-2">
                  {activity.tags.map((tag) => (
                    <span class="px-2 py-1 text-xs font-mono bg-white/10 text-white/80 rounded">{tag}</span>
                  ))}
                </div>
              )}
            </div>
          ))}
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 max-w-6xl mx-auto">
          <!-- Featured - Engineering -->
          <div class="lg:col-span-2 bg-gradient-to-br from-accent/20 to-violet-500/20 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-white/30 transition-all duration-300">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-accent to-violet-500 flex items-center justify-center mb-6">
              <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
              </svg>
            </div>
            <h3 class="font-display font-bold text-2xl text-white mb-3">Engineering</h3>
            <p class="text-slate-300 mb-4">Building scalable frontend architectures, payment integrations, and developer tools at fintech companies.</p>
            <div class="flex flex-wrap gap-2">
              <span class="px-2 py-1 text-xs font-mono bg-white/10 text-white/80 rounded">react</span>
              <span class="px-2 py-1 text-xs font-mono bg-white/10 text-white/80 rounded">payments</span>
              <span class="px-2 py-1 text-xs font-mono bg-white/10 text-white/80 rounded">fintech</span>
            </div>
          </div>

          <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-white/30 transition-all duration-300">
            <div class="w-12 h-12 rounded-xl bg-white/10 flex items-center justify-center mb-6">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
              </svg>
            </div>
            <h3 class="font-display font-bold text-xl text-white mb-2">Speaking</h3>
            <p class="text-slate-400 text-sm">Conferences and meetups worldwide about React, performance, and payments.</p>
          </div>

          <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-white/30 transition-all duration-300">
            <div class="w-12 h-12 rounded-xl bg-white/10 flex items-center justify-center mb-6">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="font-display font-bold text-xl text-white mb-2">Community</h3>
            <p class="text-slate-400 text-sm">Founded ZurichJS to bring together JavaScript enthusiasts in Switzerland.</p>
          </div>

          <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-white/30 transition-all duration-300">
            <div class="w-12 h-12 rounded-xl bg-white/10 flex items-center justify-center mb-6">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <h3 class="font-display font-bold text-xl text-white mb-2">Mentorship</h3>
            <p class="text-slate-400 text-sm">Helping developers grow through 1:1 mentorship on MentorCruise.</p>
          </div>

          <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-white/30 transition-all duration-300">
            <div class="w-12 h-12 rounded-xl bg-white/10 flex items-center justify-center mb-6">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="font-display font-bold text-xl text-white mb-2">Workshops</h3>
            <p class="text-slate-400 text-sm">Hands-on training sessions for teams and conferences.</p>
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- My Journey -->
  <section class="section py-20 md:py-28">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="heading-2 mb-4">{journey?.title || "My Journey"}</h2>
          <p class="text-ink-muted text-lg">{journey?.subtitle || "From CrossFit instructor to Staff Engineer"}</p>
        </div>

        {(journey?.milestones && journey.milestones.length > 0) ? (
          <div class="grid md:grid-cols-2 gap-6">
            {journey.milestones.map((milestone, index) => (
              <div class={`${milestone.fullWidth ? 'md:col-span-2' : ''} card p-8 ${milestone.fullWidth ? 'border-accent/20' : ''}`}>
                <div class={`w-12 h-12 rounded-2xl bg-gradient-to-br ${index === 0 ? 'from-violet-500 to-purple-500' : index === 1 ? 'from-accent to-blue-500' : 'from-emerald-500 to-teal-500'} flex items-center justify-center mb-6`}>
                  <span class="text-2xl">{milestone.emoji}</span>
                </div>
                <h3 class="font-display font-bold text-xl text-ink mb-4">{milestone.title}</h3>
                <p class="text-ink-muted leading-relaxed">{milestone.description}</p>
              </div>
            ))}
          </div>
        ) : (
          <div class="grid md:grid-cols-2 gap-6">
            <div class="card p-8">
              <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-violet-500 to-purple-500 flex items-center justify-center mb-6">
                <span class="text-2xl">üèãÔ∏è</span>
              </div>
              <h3 class="font-display font-bold text-xl text-ink mb-4">The Beginning</h3>
              <p class="text-ink-muted leading-relaxed">
                My path to software engineering wasn't traditional. I started as a CrossFit instructor before discovering my passion for coding through a bootcamp.
              </p>
            </div>

            <div class="card p-8">
              <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-accent to-blue-500 flex items-center justify-center mb-6">
                <span class="text-2xl">üöÄ</span>
              </div>
              <h3 class="font-display font-bold text-xl text-ink mb-4">Career Growth</h3>
              <p class="text-ink-muted leading-relaxed">
                I've worked at companies across Connected TV, fitness tech, SaaS, and fintech, eventually rising to Staff Engineer and Engineering Manager roles.
              </p>
            </div>

            <div class="md:col-span-2 card p-8 border-accent/20">
              <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-emerald-500 to-teal-500 flex items-center justify-center mb-6">
                <span class="text-2xl">üí°</span>
              </div>
              <h3 class="font-display font-bold text-xl text-ink mb-4">Today</h3>
              <p class="text-ink-muted leading-relaxed">
                I focus on helping developers build better software through speaking, teaching, and open source contributions. I'm particularly passionate about making complex topics like payment systems and performance optimization accessible to everyone.
              </p>
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Work Experience -->
  {companies.length > 0 && (
    <section class="section-subtle py-20 md:py-28">
      <div class="container">
        <div class="text-center mb-12">
          <h2 class="heading-2 mb-4">Work Experience</h2>
          <p class="text-ink-muted text-lg">Companies I've worked with</p>
        </div>

        <div class="max-w-4xl mx-auto space-y-4">
          {companies.map((company: any, index: number) => (
            <div
              class="bg-surface-raised rounded-2xl border border-edge p-6 flex gap-6 hover:border-accent/30 transition-all duration-300"
            >
              {company.logo && (
                <div class="flex-shrink-0 w-14 h-14 bg-surface-overlay rounded-xl overflow-hidden border border-edge">
                  <img
                    src={urlFor(company.logo).width(200).height(200).url()}
                    alt={company.name}
                    class="w-full h-full object-cover rounded-xl"
                  />
                </div>
              )}
              <div class="flex-grow">
                <div class="flex flex-wrap items-center gap-3 mb-2">
                  <h3 class="font-display font-semibold text-lg text-ink">{company.name}</h3>
                  {company.industry && (
                    <span class="px-2.5 py-1 text-xs font-medium bg-surface-overlay text-ink-muted rounded-full border border-edge">
                      {company.industry}
                    </span>
                  )}
                </div>
                <p class="text-ink-muted text-sm mb-2">
                  {company.role} ¬∑ {company.period}
                </p>
                {company.highlight && (
                  <p class="text-ink-faint text-sm">
                    {company.highlight}
                  </p>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Technical Skills - Bento Grid -->
  <section class="section py-20 md:py-28">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="heading-2 mb-4">{skillsSection?.title || "Technical Skills"}</h2>
        <p class="text-ink-muted text-lg max-w-xl mx-auto">
          {skillsSection?.subtitle || "Technologies and tools I work with daily"}
        </p>
      </div>

      <div class="max-w-5xl mx-auto">
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {skills.map((skill, index) => (
            <div class={`bento__item p-6 ${index === 0 ? 'bento__item--featured' : ''}`}>
              <div class="flex items-center gap-3 mb-4">
                <span class="text-3xl">{skill.icon}</span>
                <h3 class={`font-display font-semibold ${index === 0 ? 'text-white' : 'text-ink'}`}>
                  {skill.category}
                </h3>
              </div>
              <div class="flex flex-wrap gap-2">
                {skill.items.map((item) => (
                  <span class={`px-2.5 py-1 text-xs font-mono rounded border ${
                    index === 0
                      ? 'bg-white/10 text-white/80 border-white/20'
                      : 'bg-surface-overlay text-ink-muted border-edge'
                  }`}>
                    {item}
