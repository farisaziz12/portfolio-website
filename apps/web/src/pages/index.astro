    }

    .topics-cta__icon {
      position: relative;
      z-index: 1;
      width: 1.25rem;
      height: 1.25rem;
      transition: transform 0.3s ease;
      color: rgb(var(--accent));
    }

    .topics-cta:hover .topics-cta__icon {
      transform: translateX(3px);
    }

    .topics-cta__shine {
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgb(var(--accent) / 0.1), transparent);
      transition: left 0.5s ease;
    }

    .topics-cta:hover .topics-cta__shine {
