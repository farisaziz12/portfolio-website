    }

    /* Reduce motion */
    @media (prefers-reduced-motion: reduce) {
      .topics-glow {
        animation: none;
      }
      .topic-card__particles span {
        animation: none;
      }
      .topic-card:hover .topic-card__inner {
        transform: none;
      }
    }
  </style>

