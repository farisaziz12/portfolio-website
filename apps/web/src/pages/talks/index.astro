---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { sanityFetch } from '../../lib/sanity/client';
import { allTalksQuery } from '../../lib/sanity/queries';
import TalksFilter from '../../components/islands/TalksFilter';

interface Talk {
  _id: string;
  title: string;
  slug: string;
  abstract?: string;
  topics?: string[];
  duration?: number;
  eventCount: number;
  latestEvent?: {
    date: string;
    conference: string;
    location: string;
  };
}

const talks = await sanityFetch<Talk[]>(allTalksQuery).catch(() => []);

// Get stats
const totalTalks = talks.length;
const totalDeliveries = talks.reduce((sum, t) => sum + (t.eventCount || 0), 0);
const uniqueTopics = new Set(talks.flatMap((t) => t.topics || [])).size;

const topics = [
  { icon: '‚öõÔ∏è', name: 'React', code: 'react' },
  { icon: '‚ñ≤', name: 'Next.js', code: 'nextjs' },
  { icon: 'üí≥', name: 'Payments', code: 'payments' },
  { icon: 'üõ†Ô∏è', name: 'DX', code: 'dx' },
];
---

<BaseLayout
  title="Talks | Faris Aziz"
  description="Browse all talks by Faris Aziz on React, Next.js, payments, and developer experience. Available for conferences and meetups."
  pathname="/talks"
>
  <!-- Hero Section -->
  <section class="relative min-h-[70vh] flex items-center overflow-hidden">
    <div class="absolute inset-0 grid-pattern opacity-50"></div>
    <div class="absolute inset-0 gradient-mesh"></div>

    <div class="container relative z-10 py-20 md:py-32">
      <div class="max-w-5xl">
        <!-- Terminal intro -->
        <div class="terminal max-w-md mb-8 animate-fade-in">
          <div class="terminal__header">
            <div class="terminal__dots">
              <div class="terminal__dot terminal__dot--red"></div>
              <div class="terminal__dot terminal__dot--yellow"></div>
              <div class="terminal__dot terminal__dot--green"></div>
            </div>
            <span class="terminal__title">talks.sh</span>
          </div>
          <div class="terminal__body">
            <span class="terminal__prompt">$</span>
            <span class="terminal__command"> ls ./talks --available</span>
            <div class="terminal__output">Found {totalTalks} bookable talks...</div>
          </div>
        </div>

        <!-- Big Bold Title -->
        <h1 class="hero-title mb-8">
          <span class="block text-ink">Conference</span>
          <span class="block hero-title--gradient">Talks</span>
        </h1>

        <p class="text-lead max-w-2xl mb-8">
          Ready-to-deliver presentations on <span class="text-accent font-medium">React</span>,
          <span class="text-accent font-medium">Next.js</span>,
          <span class="text-accent font-medium">payments</span>, and
          <span class="text-accent font-medium">developer experience</span>.
          Each talk can be customized for your audience.
        </p>

        <!-- Topic Pills -->
        <div class="flex flex-wrap gap-3 mb-12">
          {topics.map((topic) => (
            <div class="topic-badge">
              <span class="topic-badge__icon">{topic.icon}</span>
              <span class="topic-badge__name">{topic.code}</span>
            </div>
          ))}
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-4">
          <a href="/invite" class="btn-primary text-lg px-8 py-4 group glow">
            Book a talk
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="/workshops" class="btn-secondary text-lg px-8 py-4">
            View workshops
          </a>
        </div>
      </div>
    </div>

    <!-- Floating Stats -->
    <div class="absolute bottom-8 right-8 hidden xl:block animate-float">
      <div class="bg-surface-raised/80 backdrop-blur-xl rounded-2xl border border-edge p-6 shadow-2xl">
        <div class="grid grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-3xl font-display font-bold text-accent">{totalTalks}</div>
            <div class="text-xs text-ink-faint uppercase tracking-wider">Talks</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-display font-bold text-violet-500">{totalDeliveries}</div>
            <div class="text-xs text-ink-faint uppercase tracking-wider">Deliveries</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-display font-bold text-pink-500">{uniqueTopics}</div>
            <div class="text-xs text-ink-faint uppercase tracking-wider">Topics</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Talks Section with Filtering -->
  <section class="section py-16 md:py-20">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-10">
          <div>
            <h2 class="heading-2 mb-2">Available Talks</h2>
            <p class="text-ink-muted text-lg">Ready-to-deliver presentations for your event</p>
          </div>
          <div class="flex items-center gap-2 text-sm text-ink-faint">
            <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
            {totalTalks} talks available for booking
          </div>
        </div>

        {talks.length > 0 ? (
          <TalksFilter client:load talks={talks} />
        ) : (
          <div class="card p-12 text-center max-w-2xl mx-auto">
            <div class="text-6xl mb-6">üé§</div>
            <h3 class="heading-3 mb-4">Coming Soon</h3>
            <p class="text-ink-muted mb-6">
              Talks will appear here once content is added to Sanity.
            </p>
            <a href="/invite" class="btn-primary">
              Contact me about speaking
            </a>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-accent via-violet-600 to-pink-600"></div>
    <div class="absolute inset-0 grid-pattern opacity-10"></div>

    <div class="container relative z-10 py-24 md:py-32">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 rounded-full text-white/90 text-sm font-medium mb-8">
          <span class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse"></span>
          Custom talks available
        </div>

        <h2 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-white mb-6">
          Need a custom talk?
        </h2>
        <p class="text-white/80 text-xl mb-10 max-w-2xl mx-auto">
          I can create tailored presentations for your specific audience and event format. Let's discuss what would work best.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/invite"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-violet-700 font-bold text-lg rounded-xl hover:bg-white/90 transition-all duration-200 hover:scale-105 active:scale-95 shadow-xl"
          >
            Get in touch
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </a>
          <a
            href="/workshops"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/10 text-white font-semibold text-lg rounded-xl border border-white/30 hover:bg-white/20 transition-all duration-200"
          >
            View workshops
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
