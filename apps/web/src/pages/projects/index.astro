---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { sanityFetch, urlFor } from '../../lib/sanity/client';
import { allProjectsQuery } from '../../lib/sanity/queries';

interface Project {
  _id: string;
  title: string;
  slug: string;
  description?: string;
  category?: string;
  technologies?: string[];
  image?: any;
  featured?: boolean;
}

const projects = await sanityFetch<Project[]>(allProjectsQuery).catch(() => []);

// Get stats
const totalProjects = projects.length;
const featuredCount = projects.filter((p) => p.featured).length;
const categories = new Set(projects.map((p) => p.category).filter(Boolean));

const categoryIcons: Record<string, string> = {
  'Open Source': 'üîì',
  'Side Project': 'üöÄ',
  'Professional': 'üíº',
  'Extension': 'üß©',
  'Library': 'üì¶',
  'Tool': 'üõ†Ô∏è',
};
---

<BaseLayout
  title="Projects | Faris Aziz"
  description="Featured projects and case studies by Faris Aziz. Open source contributions, side projects, and professional work."
  pathname="/projects"
>
  <!-- Hero Section -->
  <section class="relative min-h-[70vh] flex items-center overflow-hidden">
    <div class="absolute inset-0 grid-pattern opacity-50"></div>
    <div class="absolute inset-0 gradient-mesh"></div>

    <div class="container relative z-10 py-20 md:py-32">
      <div class="max-w-5xl">
        <!-- Terminal intro -->
        <div class="terminal max-w-md mb-8 animate-fade-in">
          <div class="terminal__header">
            <div class="terminal__dots">
              <div class="terminal__dot terminal__dot--red"></div>
              <div class="terminal__dot terminal__dot--yellow"></div>
              <div class="terminal__dot terminal__dot--green"></div>
            </div>
            <span class="terminal__title">projects.sh</span>
          </div>
          <div class="terminal__body">
            <span class="terminal__prompt">$</span>
            <span class="terminal__command"> ls ./projects --all</span>
            <div class="terminal__output">Found {totalProjects} projects...</div>
          </div>
        </div>

        <!-- Big Bold Title -->
        <h1 class="hero-title mb-8">
          <span class="block text-ink">My</span>
          <span class="block hero-title--gradient">Projects</span>
        </h1>

        <p class="text-lead max-w-2xl mb-8">
          A collection of <span class="text-accent font-medium">open source tools</span>,
          <span class="text-accent font-medium">side projects</span>, and
          <span class="text-accent font-medium">professional work</span>.
          Built with modern technologies and a focus on developer experience.
        </p>

        <!-- Category Pills -->
        <div class="flex flex-wrap gap-3 mb-12">
          {Array.from(categories).slice(0, 5).map((category) => (
            <div class="topic-badge">
              <span class="topic-badge__icon">{categoryIcons[category as string] || 'üìÅ'}</span>
              <span class="topic-badge__name">{category}</span>
            </div>
          ))}
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-4">
          <a href="https://github.com/farisaziz12" target="_blank" rel="noopener noreferrer" class="btn-primary text-lg px-8 py-4 group glow">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            View GitHub
          </a>
          <a href="/invite" class="btn-secondary text-lg px-8 py-4">
            Work with me
          </a>
        </div>
      </div>
    </div>

    <!-- Floating Stats -->
    <div class="absolute bottom-8 right-8 hidden xl:block animate-float">
      <div class="bg-surface-raised/80 backdrop-blur-xl rounded-2xl border border-edge p-6 shadow-2xl">
        <div class="grid grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-3xl font-display font-bold text-accent">{totalProjects}</div>
            <div class="text-xs text-ink-faint uppercase tracking-wider">Projects</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-display font-bold text-violet-500">{featuredCount}</div>
            <div class="text-xs text-ink-faint uppercase tracking-wider">Featured</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-display font-bold text-pink-500">{categories.size}</div>
            <div class="text-xs text-ink-faint uppercase tracking-wider">Categories</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Bento Grid -->
  <section class="section-subtle py-16 md:py-20">
    <div class="container">
      <div class="grid grid-cols-3 gap-4 md:gap-6 max-w-3xl mx-auto">
        <div class="bento__item bento__item--featured flex flex-col items-center justify-center py-10">
          <div class="stat-big__value text-4xl md:text-5xl">{totalProjects}</div>
          <div class="text-slate-400 text-sm uppercase tracking-widest mt-2">Projects</div>
        </div>
        <div class="bento__item flex flex-col items-center justify-center py-10">
          <div class="text-4xl md:text-5xl font-display font-bold text-violet-500">{featuredCount}</div>
          <div class="text-ink-muted text-sm uppercase tracking-widest mt-2">Featured</div>
        </div>
        <div class="bento__item flex flex-col items-center justify-center py-10">
          <div class="text-4xl md:text-5xl font-display font-bold text-pink-500">{categories.size}</div>
          <div class="text-ink-muted text-sm uppercase tracking-widest mt-2">Categories</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="section py-16 md:py-20">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-10">
          <div>
            <h2 class="heading-2 mb-2">All Projects</h2>
            <p class="text-ink-muted text-lg">Tools, libraries, and applications I've built</p>
          </div>
          <div class="flex items-center gap-2 text-sm text-ink-faint">
            <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
            {totalProjects} projects
          </div>
        </div>

        {projects.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {projects.map((project: any) => (
              <a
                href={`/projects/${project.slug}`}
                class="group relative bg-surface-raised rounded-2xl border border-edge overflow-hidden hover:border-accent/50 hover:shadow-xl transition-all duration-300"
              >
                <!-- Gradient Top Bar -->
                <div class="h-1 bg-gradient-to-r from-accent via-violet-500 to-pink-500"></div>

                {project.image && (
                  <div class="aspect-video bg-surface-overlay overflow-hidden">
                    <img
                      src={urlFor(project.image).width(600).height(340).quality(90).url()}
                      alt={project.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                      loading="lazy"
                    />
                  </div>
                )}

                <div class="p-6">
                  <div class="flex flex-wrap items-center gap-2 mb-3">
                    {project.category && (
                      <span class="px-2.5 py-1 text-xs font-mono bg-surface-overlay text-ink-muted rounded-full border border-edge">
                        {project.category}
                      </span>
                    )}
                    {project.featured && (
                      <span class="px-2.5 py-1 text-xs font-medium bg-accent-muted text-accent rounded-full border border-accent/20">
                        Featured
                      </span>
                    )}
                  </div>

                  <h3 class="font-display font-semibold text-lg text-ink mb-2 group-hover:text-accent transition-colors">
                    {project.title}
                  </h3>

                  {project.description && (
                    <p class="text-ink-muted text-sm mb-4 line-clamp-2">
                      {project.description}
                    </p>
                  )}

                  {project.technologies && project.technologies.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {project.technologies.slice(0, 4).map((tech: string) => (
                        <span class="text-xs text-ink-faint font-mono">
                          {tech}
                        </span>
                      ))}
                      {project.technologies.length > 4 && (
                        <span class="text-xs text-ink-faint">
                          +{project.technologies.length - 4}
                        </span>
                      )}
                    </div>
                  )}
                </div>

                <!-- Hover Arrow -->
                <div class="absolute bottom-6 right-6 opacity-0 group-hover:opacity-100 transition-opacity">
                  <div class="w-8 h-8 rounded-full bg-accent/10 flex items-center justify-center">
                    <svg class="w-4 h-4 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </div>
              </a>
            ))}
          </div>
        ) : (
          <div class="card p-12 text-center max-w-2xl mx-auto">
            <div class="text-6xl mb-6">üöÄ</div>
            <h3 class="heading-3 mb-4">Coming Soon</h3>
            <p class="text-ink-muted mb-6">
              Projects will appear here once content is added to Sanity.
            </p>
            <a href="https://github.com/farisaziz12" target="_blank" rel="noopener noreferrer" class="btn-primary">
              View my GitHub
            </a>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-accent via-violet-600 to-pink-600"></div>
    <div class="absolute inset-0 grid-pattern opacity-10"></div>

    <div class="container relative z-10 py-24 md:py-32">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 rounded-full text-white/90 text-sm font-medium mb-8">
          <span class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse"></span>
          Open for collaboration
        </div>

        <h2 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-white mb-6">
          Let's build something together
        </h2>
        <p class="text-white/80 text-xl mb-10 max-w-2xl mx-auto">
          I'm always excited to collaborate on interesting projects. Whether it's open source, consulting, or a new venture.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://github.com/farisaziz12"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-violet-700 font-bold text-lg rounded-xl hover:bg-white/90 transition-all duration-200 hover:scale-105 active:scale-95 shadow-xl"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            Follow on GitHub
          </a>
          <a
            href="/invite"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/10 text-white font-semibold text-lg rounded-xl border border-white/30 hover:bg-white/20 transition-all duration-200"
          >
            Get in touch
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
