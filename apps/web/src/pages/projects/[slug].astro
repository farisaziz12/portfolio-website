---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { sanityFetch, urlFor } from '../../lib/sanity/client';
import { projectBySlugQuery, allProjectsQuery } from '../../lib/sanity/queries';

interface ProjectDetail {
  _id: string;
  title: string;
  slug: string;
  description?: string;
  category?: string;
  technologies?: string[];
  image?: any;
  links?: {
    live?: string;
    github?: string;
    npm?: string;
  };
  featured?: boolean;
  role?: string;
  outcomes?: string[];
  screenshots?: {
    _key: string;
    image: any;
    title?: string;
    description?: string;
  }[];
}

interface ProjectListItem {
  _id: string;
  slug: string;
}

export async function getStaticPaths() {
  const projects = await sanityFetch<ProjectListItem[]>(allProjectsQuery).catch(() => []);
  return projects.map((project) => ({
    params: { slug: project.slug },
  }));
}

const { slug } = Astro.params;
const project = await sanityFetch<ProjectDetail | null>(projectBySlugQuery, { slug }).catch(() => null);

if (!project) {
  return Astro.redirect('/404');
}

const techCount = project.technologies?.length || 0;
const hasLive = !!project.links?.live;
const hasGithub = !!project.links?.github;
const hasNpm = !!project.links?.npm;
---

<BaseLayout
  title={`${project.title} | Projects | Faris Aziz`}
  description={project.description || project.title}
  pathname={`/projects/${slug}`}
  image={project.image ? urlFor(project.image).width(1200).height(630).url() : undefined}
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 grid-pattern opacity-50"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-accent/5 via-violet-500/5 to-pink-500/5"></div>

    <div class="container relative z-10 pt-20 md:pt-28 pb-16">
      <div class="max-w-4xl">
        <!-- Breadcrumb -->
        <a href="/projects" class="inline-flex items-center gap-2 text-ink-muted hover:text-accent mb-8 transition-colors">
          <svg class="w-4 h-4 rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          All projects
        </a>

        <!-- Terminal intro -->
        <div class="terminal max-w-lg mb-8 animate-fade-in">
          <div class="terminal__header">
            <div class="terminal__dots">
              <div class="terminal__dot terminal__dot--red"></div>
              <div class="terminal__dot terminal__dot--yellow"></div>
              <div class="terminal__dot terminal__dot--green"></div>
            </div>
            <span class="terminal__title">project.sh</span>
          </div>
          <div class="terminal__body">
            <span class="terminal__prompt">$</span>
            <span class="terminal__command"> cat ./projects/{slug}/README.md</span>
            <div class="terminal__output">Loading project details...</div>
          </div>
        </div>

        <!-- Tags Row -->
        <div class="flex flex-wrap items-center gap-2 mb-6">
          {project.category && (
            <span class="px-3 py-1.5 text-sm font-medium text-accent bg-accent-muted rounded-lg border border-accent/20">
              {project.category}
            </span>
          )}
          {hasLive && (
            <span class="flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-emerald-600 dark:text-emerald-400 bg-emerald-50 dark:bg-emerald-900/20 rounded-lg border border-emerald-200 dark:border-emerald-800">
