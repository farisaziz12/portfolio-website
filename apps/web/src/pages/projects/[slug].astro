                    <a
                      href={project.links.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-2.5 p-2.5 rounded-lg bg-surface-overlay hover:bg-accent/10 transition-colors group"
                    >
                      <div class="w-7 h-7 rounded-md bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
