---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { sanityFetch, urlFor } from '../../lib/sanity/client';
import { projectBySlugQuery, allProjectsQuery } from '../../lib/sanity/queries';

interface ProjectDetail {
  _id: string;
  title: string;
  slug: string;
  description?: string;
  category?: string;
  technologies?: string[];
  image?: any;
  links?: {
    liveUrl?: string;
    githubUrl?: string;
    npmUrl?: string;
  };
  featured?: boolean;
  role?: string;
  outcomes?: string[];
  screenshots?: {
    _key: string;
    image: any;
    title?: string;
    description?: string;
  }[];
}

interface ProjectListItem {
  _id: string;
  slug: string;
}

export async function getStaticPaths() {
  const projects = await sanityFetch<ProjectListItem[]>(allProjectsQuery).catch(() => []);
  return projects.map((project) => ({
    params: { slug: project.slug },
  }));
}

const { slug } = Astro.params;
const project = await sanityFetch<ProjectDetail | null>(projectBySlugQuery, { slug }).catch(() => null);

if (!project) {
  return Astro.redirect('/404');
}

const hasLive = !!project.links?.liveUrl;
const hasGithub = !!project.links?.githubUrl;
const hasNpm = !!project.links?.npmUrl;
const hasLinks = hasLive || hasGithub || hasNpm;
---

<BaseLayout
  title={`${project.title} | Projects | Faris Aziz`}
  description={project.description || project.title}
  pathname={`/projects/${slug}`}
  image={project.image ? urlFor(project.image).width(1200).height(630).url() : undefined}
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 grid-pattern opacity-30"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-surface"></div>

    <div class="container relative z-10 pt-20 md:pt-28 pb-12">
      <div class="max-w-3xl">
        <!-- Breadcrumb -->
        <a href="/projects" class="inline-flex items-center gap-2 text-ink-muted hover:text-accent transition-colors text-sm">
          <svg class="w-4 h-4 rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          All projects
        </a>

        <!-- Category Badge -->
        {project.category && (
          <div class="mt-6 mb-4">
            <span class="inline-block px-3 py-1 text-sm font-medium text-accent bg-accent/10 rounded-full border border-accent/20">
              {project.category}
            </span>
          </div>
        )}

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-ink mb-6 leading-tight">
          {project.title}
        </h1>

        <!-- Description -->
        {project.description && (
          <p class="text-lg md:text-xl text-ink-muted max-w-2xl mb-8 leading-relaxed">
            {project.description}
          </p>
        )}

        <!-- Links -->
        {hasLinks && (
          <div class="flex flex-wrap gap-3">
            {project.links?.liveUrl && (
              <a
                href={project.links.liveUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-5 py-2.5 bg-accent text-white font-medium rounded-lg hover:bg-accent/90 transition-colors"
              >
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                View live
              </a>
            )}
            {project.links?.githubUrl && (
              <a
                href={project.links.githubUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-5 py-2.5 bg-surface-overlay text-ink font-medium rounded-lg border border-edge hover:border-accent/50 transition-colors"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
                Source code
              </a>
            )}
            {project.links?.npmUrl && (
              <a
                href={project.links.npmUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-5 py-2.5 bg-surface-overlay text-ink font-medium rounded-lg border border-edge hover:border-accent/50 transition-colors"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M0 7.334v8h6.666v1.332H12v-1.332h12v-8H0zm6.666 6.664H5.334v-4H3.999v4H1.335V8.667h5.331v5.331zm4 0v1.336H8.001V8.667h5.334v5.332h-2.669v-.001zm12.001 0h-1.33v-4h-1.336v4h-1.335v-4h-1.33v4h-2.671V8.667h8.002v5.331zM10.665 10H12v2.667h-1.335V10z" />
                </svg>
                npm
              </a>
            )}
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Project Image -->
  {project.image && (
    <section class="pb-6 md:pb-8">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <div class="rounded-xl md:rounded-2xl overflow-hidden border border-edge shadow-lg">
            <img
              src={urlFor(project.image).width(1200).height(675).quality(90).url()}
              alt={project.title}
              class="w-full h-auto"
              loading="eager"
            />
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Content Section -->
  {(project.role || (project.outcomes && project.outcomes.length > 0) || (project.technologies && project.technologies.length > 0)) && (
    <section class="py-8 md:py-12">
      <div class="container">
        <div class="max-w-3xl mx-auto space-y-8">
          <!-- Role -->
          {project.role && (
            <div>
              <h2 class="text-sm font-medium text-ink-muted uppercase tracking-wider mb-3">My Role</h2>
              <p class="text-ink leading-relaxed">{project.role}</p>
            </div>
          )}

          <!-- Outcomes -->
          {project.outcomes && project.outcomes.length > 0 && (
            <div>
              <h2 class="text-sm font-medium text-ink-muted uppercase tracking-wider mb-3">Key Outcomes</h2>
              <ul class="space-y-2">
                {project.outcomes.map((outcome: string) => (
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-emerald-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-ink">{outcome}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}

          <!-- Technologies -->
          {project.technologies && project.technologies.length > 0 && (
            <div>
              <h2 class="text-sm font-medium text-ink-muted uppercase tracking-wider mb-3">Built With</h2>
              <div class="flex flex-wrap gap-2">
                {project.technologies.map((tech: string) => (
                  <span class="px-3 py-1.5 text-sm bg-surface-overlay text-ink-muted rounded-lg border border-edge">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- Screenshots -->
  {project.screenshots && project.screenshots.length > 0 && (
    <section class="py-12 md:py-16 bg-surface-overlay/50">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-sm font-medium text-ink-muted uppercase tracking-wider mb-6">Screenshots</h2>
          <div class="grid md:grid-cols-2 gap-4">
            {project.screenshots.map((screenshot: any) => (
              <div class="rounded-xl overflow-hidden border border-edge bg-surface">
                <img
                  src={urlFor(screenshot).width(600).height(400).quality(90).url()}
                  alt={screenshot.alt || project.title}
                  class="w-full h-auto"
                  loading="lazy"
                />
                {screenshot.caption && (
                  <div class="p-3 border-t border-edge">
                    <p class="text-xs text-ink-muted">{screenshot.caption}</p>
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Simple CTA -->
  <section class="py-10 md:py-12">
    <div class="container">
      <div class="max-w-xl mx-auto text-center">
        <p class="text-ink-muted mb-4">Interested in working together?</p>
        <a
          href="/consulting"
          class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-white font-medium rounded-lg hover:bg-accent/90 transition-colors"
        >
          Get in touch
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
