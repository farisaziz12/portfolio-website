---
import type { Props as BaseProps, TypedObject } from 'astro-portabletext/types';

type CalloutType = 'info' | 'warning' | 'success' | 'error' | 'tip';

interface CalloutBlock extends TypedObject {
  _type: 'callout';
  type?: CalloutType;
  title?: string;
  content?: string;
}

type Props = BaseProps<CalloutBlock>;

const { node } = Astro.props;
const calloutType: CalloutType = node.type ?? 'info';

const colors: Record<CalloutType, string> = {
  info: 'bg-blue-500/10 border-blue-500/30 text-blue-400',
  warning: 'bg-amber-500/10 border-amber-500/30 text-amber-400',
  success: 'bg-emerald-500/10 border-emerald-500/30 text-emerald-400',
  error: 'bg-red-500/10 border-red-500/30 text-red-400',
  tip: 'bg-violet-500/10 border-violet-500/30 text-violet-400',
};

const icons: Record<CalloutType, string> = {
  info: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  warning: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
  success: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  error: 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z',
  tip: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
};
---
<div class={`my-8 p-4 rounded-lg border ${colors[calloutType]}`}>
  <div class="flex items-start gap-3">
    <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[calloutType]} />
    </svg>
    <div>
      {node.title && (
        <p class="font-semibold mb-1">{node.title}</p>
      )}
      <p class="text-ink-muted text-sm">{node.content}</p>
    </div>
  </div>
</div>
